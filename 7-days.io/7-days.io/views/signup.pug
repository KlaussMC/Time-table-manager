extends layout

block content
  form#signup
    h1 Sign Up  
    div#container
      .un
        span.label Username
        br
        input(type="email", name="email", placeholder="Email")
      br
      .pw
          span.label Password
          br
          input(type="text", name="un", placeholder="Username")
      br
      .un
        span.label Password
        br
        input(type="password", name="pw", placeholder="Password")
      br
      .pw
          span.label Confirm Password
          br
          input(type="password", name="pwc", placeholder="Confirm Password")

      br
      input(type="submit", value="Login")

    .acont
      a(href="/signup") I don't have an account
      a(href="/forgotPassword") Forgot Password